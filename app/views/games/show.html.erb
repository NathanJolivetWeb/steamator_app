<div class='container mt-5'>
  <div class='game-container'>
    <%= cl_image_tag @game.photo.key, class:'game_avatar mr-4' %>
    <div class='game-information'>
      <div class='d-flex justify-content-between'>
        <h3><%= @game.title %></h3>
        <div>
          <% tags = @game.tags.map(&:name) %>
          <% tags.each do |tag| %>
            <span class="mr-2 pt-2 pb-2 pr-3 pl-3 badge badge-secondary"><%= tag %></span>
          <% end %>
        </div>
      </div>
        <p><%= @game.description %></p>
    </div>
  </div>
  <div data-controller="loader" data-loader-url-value="<%= @game.api_url%>">
    <div data-loader-target="owner"></div>
  </div>

  <div class="informations d-flex justify-content-around">
    <div class="w-50 mt-5">
      <canvas id="myChart" width="100" height="70"></canvas>
    </div>
    <div class="box-description mt-5">
      <p>Sale Prediction:</p>
    </div>
  </div>
</div>
